<!DOCTYPE html>
<html>
<head>
    <meta charset="UTF-8" />
    <title><%= header.title; %></title>
    <style>
        body {
            font-family: Arial, sans-serif;
            padding: 40px;
            font-size: 14px;
            color: #333;
        }

        h2 {
            text-align: center;
            margin-bottom: 5px;
        }

        p.subtitle {
            text-align: center;
            margin-top: 0;
            font-size: 0.9em;
            color: #555;
        }

        table {
            width: 100%;
            border-collapse: collapse;
            margin-top: 25px;
        }

        th, td {
            border: 1px solid #ccc;
            padding: 8px;
            text-align: left;
        }

        th {
            background-color: #f5f5f5;
        }

        section {
            margin-bottom: 40px;
        }

        .section-title {
            font-weight: bold;
            margin-top: 30px;
            font-size: 1.1em;
        }
    </style>
</head>
<body>
<h2><%= header.title; %></h2>
<p class="subtitle"><%= header.subtitle; %></p>

<section>
    <div class="section-title">Student Test Summary</div>
    <table>
        <thead>
        <tr>
            <th>Name</th>
            <th>Raw Score</th>
            <th>Total Score</th>
            <th>Percentage</th>
            <th>Status</th>
        </tr>
        </thead>
        <tbody>
        <tr>
            <td><%= summary.name; %></td>
            <td><%= summary.rawScore; %></td>
            <td><%= summary.totalScore; %></td>
            <td><%= summary.percentage; %> %</td>
            <td><%= summary.status; %></td>
        </tr>
        </tbody>
    </table>
</section>

<section>
    <div class="section-title">Category-wise Breakdown</div>
    <table>
        <thead>
        <tr>
            <th>Category</th>
            <th>Total Questions</th>
            <th>Correct Answers</th>
        </tr>
        </thead>
        <tbody>
        <% breakdown.forEach(row => { %>
            <tr>
                <td><%= row.category; %></td>
                <td><%= row.totalQuestions; %></td>
                <td><%= row.correctAnswers; %></td>
            </tr>
        <% }); %>
        </tbody>
    </table>
</section>
</body>
</html>
